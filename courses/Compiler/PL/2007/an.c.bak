#include <stdio.h> 
#include <math.h> 
#include <string.h> 

main (argc, argv) 
	int	argc; 
	char	**argv; 
{ 
  int	i, n; 
  
  n = atoi(argv[1]); 
  sol = (int *) malloc((n+1)*sizeof(int)); 
  
  sol[0] = 0; 
  sol[1] = 0; 
  sol[2] = 0; 
  for (i = 3; i <= n; i++) 
    sol[i] = sol[i-1] + 2 * sol[i-2] + 1; 
  printf("solution %1d = %1d.\n", n, sol[n]); 
}
  /* main() */ 